/* pages/player_rank/player_rank.wxss */
.stats-nav{
  width: 100%;
}
.stats-nav text{
  display: block;
  width: 16.666%;
  float: left;
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 0;
  color: #333;
}

.table{
  width: 100%;
  float: left;
}
.header{
  width: 100%;
  height: 70rpx;
  background: #f5f5f5;
  font-size:28rpx;
}

.header text{
  display: block;
  float: left;
  text-align: center;
  line-height: 70rpx;
}
.player {
  width: 50%;
}
.player image{
  width: 60rpx;
  height: 60rpx;
  float: left;
}
.team {
  width: 25%;
}
.data {
  width: 25%;
}
.tbody{
  font-size: 28rpx;

}
.tbody text, .tbody view{
  display: block;
  float: left;
  text-align: center;
  line-height: 70rpx;
  height: 70rpx;
  overflow: hidden
}
.tbody text:first-child,.header text:first-child{
  text-align: left;
  box-sizing: border-box;
  overflow: hidden
}
.tbody text:first-child {
  padding-left: 20rpx;
  width: 50rpx;
}
.header text:first-child {
  padding-left: 40rpx;
}
text.active{
  color: #00AA98;
}
.tbody navigator{
  display: block;
  height: 70rpx;
}
.f5f5f5{
  background: #f5f5f5;
}